# Configuration de l'environnement de développement
NODE_ENV=development
PORT=3000

# Base de données PostgreSQL
DATABASE_URL=postgresql://postgres:password@localhost:5432/cipfaro

# Clé secrète JWT (à changer en production)
JWT_SECRET=cip-faro-jwt-secret-development-key-2025

# Configuration Email
EMAIL_SERVICE=gmail
EMAIL_USER=contact@cipfaro.fr
EMAIL_PASSWORD=votre-mot-de-passe-app-gmail

# URLs autorisées pour CORS
FRONTEND_URL=http://localhost:5173
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:5174,http://localhost:5175

# Limites de fichiers
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=.pdf,.doc,.docx,.jpg,.jpeg,.png

# Configuration de sécurité
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# Configuration de session
SESSION_SECRET=cip-faro-session-secret-development
COOKIE_MAX_AGE=604800000

# Configuration de logging
LOG_LEVEL=debug
LOG_FILE=logs/app.log